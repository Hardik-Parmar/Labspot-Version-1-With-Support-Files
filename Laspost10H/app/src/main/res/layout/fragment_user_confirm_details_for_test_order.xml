<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".user.after_login.User_Confirm_Details_For_Test_Order">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm The Following Details to Place Request For the Test at Lab"
                android:layout_marginLeft="5dp"
                android:textSize="20dp"
                android:textColor="#262626"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:fontFamily="sans-serif-medium"/>

            <com.codesgood.views.JustifiedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Address for the collecting anf delivering the sample and report"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="#262626"
                android:layout_marginRight="10dp"
                android:layout_marginTop="25dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/user_confirm_detail_for_test_request_your_address"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Above Address Will be used for Collecting the Samples as well as Delivering the Reports."
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:layout_marginRight="10dp"
                android:textColor="#FF0000"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Phone Number"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="#262626"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/user_confirm_detail_for_test_request_your_phone"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lab Name"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="#262626"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/user_confirm_detail_for_test_request_lab_name"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lab Phone"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="#262626"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/user_confirm_detail_for_test_request_lab_phone"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lab Email"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="#262626"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/user_confirm_detail_for_test_request_lab_mail"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Name"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:textColor="#262626"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/user_confirm_detail_for_test_request_test_name"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Price"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="#262626"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:id="@+id/user_confirm_detail_for_test_request_test_price"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* incl. 20% as Access Fees and All Other Taxes"
                android:layout_marginLeft="10dp"
                android:textSize="12dp"
                android:layout_marginRight="10dp"
                android:textColor="#FF0000"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"/>

            <Button
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_background"
                android:layout_gravity="center_horizontal"
                android:text="Place Request For the Test"
                android:textSize="15dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/user_confirm_detail_for_test_request_place_request"
                android:textAllCaps="false"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>