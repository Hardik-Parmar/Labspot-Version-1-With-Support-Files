<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".lab.after_login.Lab_Request_For_Report_Collect">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lab_request_refresh">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* All the Test Requests Which were Completed will be shown as Below."
                android:textColor="#FF0000"
                android:layout_margin="20dp"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:focusable="true"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Please Click on Any Record to Request for a Delivery Boy to Collect Report."
                android:textColor="#FF0000"
                android:layout_margin="5dp"
                android:gravity="center_horizontal"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:focusable="true"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/lab_view_accept_request_for_report_collect_list_view"/>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>