<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".user.after_login.User_After_Clicked_Lab_Detailed_Page">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/user_after_click_refresh">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/logo1"
                android:id="@+id/user_lab_click_logo"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name: - "
                    android:textSize="17dp"
                    android:textColor="#262626"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/user_lab_click_name_title"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LAB NAME"
                    android:layout_marginLeft="35dp"
                    android:textSize="17dp"
                    android:textColor="#262626"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/user_lab_click_name"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address: - "
                    android:textSize="17dp"
                    android:textColor="#262626"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/user_lab_click_address_title"/>

                <com.codesgood.views.JustifiedTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LAB ADDRESS "
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="5dp"
                    android:textSize="17dp"
                    android:textColor="#262626"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/user_lab_click_address"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Category: - "
                    android:textSize="17dp"
                    android:textColor="#262626"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/user_lab_click_category_title"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LAB CATEGORY"
                    android:layout_marginLeft="8dp"
                    android:textSize="17dp"
                    android:textColor="#262626"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/user_lab_click_category"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Number: - "
                    android:textSize="17dp"
                    android:textColor="#262626"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/user_lab_click_phone_title"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LAB PHONE"
                    android:layout_marginLeft="17dp"
                    android:textSize="17dp"
                    android:textColor="#262626"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/user_lab_click_phone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="5dp">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="E-Mail I'D: - "
                    android:textSize="17dp"
                    android:textColor="#262626"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/user_lab_click_mail_title"/>

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LAB NAME"
                    android:layout_marginLeft="6dp"
                    android:textSize="17dp"
                    android:textColor="#262626"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-medium"
                    android:id="@+id/user_lab_click_mail"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="2dp"
                android:background="#DCDCDC"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Test Details Which Laboratories Conduct in it's Lab"
                android:textColor="#FF0000"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="15dp"
                android:fontFamily="sans-serif-medium"
                android:focusable="true"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/user_lab_click_test_detail_list_view"/>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>