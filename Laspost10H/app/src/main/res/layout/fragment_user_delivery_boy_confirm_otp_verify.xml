<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".delivery.after_login.user_side_request_otp_section.User_Delivery_Boy_Confirm_otp_Verify">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OTP Verification to Authenticate you as Authenticated Delivery Boy"
        android:gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#262626"
        android:id="@+id/user_lab_delivery_boy_confirm_otp_verify_title"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:outlineAmbientShadowColor="#ffff"
        android:layout_gravity="center_horizontal">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:hint="Enter An OTP"
            android:inputType="number"
            android:textColor="#262626"
            android:textSize="14dp"
            android:background="@android:color/transparent"
            android:textColorHint="#262626"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/user_lab_delivery_boy_confirm_otp_verify_otp_enter"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_background"
        android:layout_gravity="center_horizontal"
        android:text="Verify OTP from Customer"
        android:textSize="14dp"
        android:textAllCaps="false"
        android:id="@+id/user_lab_delivery_boy_confirm_otp_verify_otp_submit"/>

</LinearLayout>