<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".delivery.after_login.user_side_request_otp_section.Lab_Delivery_Boy_Confirm_otp_Generate">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab Details And Address for Delivery of Sample"
        android:gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:textSize="17dp"
        android:fontFamily="sans-serif-medium"
        android:textColor="#262626"
        android:id="@+id/user_lab_delivery_boy_confirm_otp_generate_title"
        android:textStyle="bold"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Request I'D"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="14dp"
        android:textColor="#262626"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/user_lab_delivery_boy_confirm_otp_generate_request_id"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab Name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="14dp"
        android:textColor="#262626"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/user_lab_delivery_boy_confirm_otp_generate_lab_name"/>

    <com.codesgood.views.JustifiedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab Address"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="14dp"
        android:textColor="#262626"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/user_lab_delivery_boy_confirm_otp_generate_lab_address"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab Phone"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="14dp"
        android:textColor="#262626"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/user_lab_delivery_boy_confirm_otp_generate_lab_phone"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lab Email"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="14dp"
        android:textColor="#262626"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/user_lab_delivery_boy_confirm_otp_generate_lab_email"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="test name"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="14dp"
        android:textColor="#262626"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/user_lab_delivery_boy_confirm_otp_generate_test_name"/>

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test Price"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="14dp"
        android:textColor="#262626"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-medium"
        android:id="@+id/user_lab_delivery_boy_confirm_otp_generate_test_price"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_background"
        android:layout_gravity="center_horizontal"
        android:text="Reached at Lab Location"
        android:textSize="14dp"
        android:textAllCaps="false"
        android:id="@+id/user_lab_delivery_boy_confirm_otp_generate_reached_otp"/>

</LinearLayout>