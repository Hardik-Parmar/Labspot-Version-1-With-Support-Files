<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".lab.after_login.Lab_View_Edit_Test_Details">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lab_test_display_refresh">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All the Test Which were Added in the Server are Displayed."
                android:textColor="#FF0000"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:textSize="13dp"
                android:fontFamily="sans-serif-medium"
                android:focusable="true"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="* Please Click on any Lab Test to edit Details of that Test"
                android:textColor="#FF0000"
                android:gravity="center_horizontal"
                android:textSize="12dp"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-medium"
                android:focusable="true"/>

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/lab_test_display_list_view"/>

        </LinearLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</LinearLayout>