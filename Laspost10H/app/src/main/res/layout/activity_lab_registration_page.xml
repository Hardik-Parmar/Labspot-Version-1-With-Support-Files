<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".lab.registration_and_login_system.Lab_Registration_Page">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center_horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/man"
            android:text="Laboratory Registration "
            android:textColor="#5DC179"
            android:textSize="28sp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:outlineAmbientShadowColor="#ffff"
                android:layout_gravity="center_horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Lab Name"
                    android:inputType="text"
                    android:id="@+id/lab_name"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:outlineAmbientShadowColor="#ffff"
                android:layout_gravity="center_horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Lab Address"
                    android:inputType="textMultiLine"
                    android:id="@+id/lab_address"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:outlineAmbientShadowColor="#ffff"
                android:autofillHints="Select Lab City"
                android:layout_gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/lab_city"
                    android:layout_width="270dp"
                    android:entries="@array/lab_city_names"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:outlineAmbientShadowColor="#ffff"
                android:layout_gravity="center_horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Lab Phone Number"
                    android:inputType="phone"
                    android:id="@+id/lab_phone"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:outlineAmbientShadowColor="#ffff"
                android:layout_gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/lab_category"
                    android:layout_width="270dp"
                    android:entries="@array/lab_categories"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:outlineAmbientShadowColor="#ffff"
                android:layout_gravity="center_horizontal">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/lab_established_year"
                    android:layout_width="270dp"
                    android:entries="@array/lab_established_year"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:outlineAmbientShadowColor="#ffff"
                android:layout_gravity="center_horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Lab E-mail I'D"
                    android:id="@+id/lab_email"
                    android:inputType="textEmailAddress"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:passwordToggleEnabled="true"
                android:outlineAmbientShadowColor="#ffff"
                android:layout_gravity="center_horizontal">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:hint="Enter Your Password"
                    android:id="@+id/lab_password"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:outlineAmbientShadowColor="#ffff"
                    android:layout_gravity="center_horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:hint="Select Your Lab Logo"
                        android:id="@+id/lab_logo_name"
                        android:textSize="15dp"
                        android:visibility="gone"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/lab_select_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableRight="@drawable/ic_baseline_arrow_upward_24"
                    android:background="@drawable/img_btn"
                    android:padding="10dp"
                    android:textSize="12dp"
                    android:text="Select Logo"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/btn_background"
                android:layout_gravity="center_horizontal"
                android:text="Register"
                android:textSize="15dp"
                android:textAllCaps="false"
                android:id="@+id/lab_register"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>