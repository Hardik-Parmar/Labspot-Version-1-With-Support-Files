<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="125dp"
    android:background="@drawable/background"
    tools:context=".lab.after_login.Lab_Take_Action_On_Test_Request">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Action On the Test Request."
        android:textColor="#262626"
        android:gravity="center_horizontal"
        android:textSize="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-medium"
        android:focusable="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Request I'D : - "
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#880E4F"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/take_action_test_id_title"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST ID"
            android:layout_marginLeft="40dp"
            android:textSize="14dp"
            android:textColor="#262626"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/take_action_test_id"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Applicant Name : - "
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#880E4F"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/take_action_user_name_title"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST LAB NAME"
            android:layout_marginLeft="40dp"
            android:textSize="14dp"
            android:textColor="#262626"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/take_action_user_name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Applicant Phone No. : - "
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#880E4F"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/take_action_user_phone_title"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST NAME"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textColor="#262626"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/take_action_user_phone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Applicant E-Mail I'D : - "
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#880E4F"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/take_action_user_mail_title"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST ID"
            android:layout_marginLeft="15dp"
            android:textSize="14dp"
            android:textColor="#262626"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/take_action_user_mail"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Name : - "
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#880E4F"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/take_action_test_name_title"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST ID"
            android:layout_marginLeft="72dp"
            android:textSize="14dp"
            android:textColor="#262626"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/take_action_test_name"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date of Request : - "
            android:layout_marginLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="#880E4F"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/take_action_date_of_request_title"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TEST REQUEST DATE"
            android:layout_marginLeft="38dp"
            android:textSize="14dp"
            android:textColor="#262626"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/take_action_date_of_request"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:weightSum="2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_background"
            android:layout_gravity="center_horizontal"
            android:text="Reject Request"
            android:textSize="14dp"
            android:textAllCaps="false"
            android:id="@+id/take_action_reject_button"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_background"
            android:layout_gravity="center_horizontal"
            android:text="Accept Request"
            android:textSize="14dp"
            android:textAllCaps="false"
            android:id="@+id/take_action_accept_button"/>

    </LinearLayout>

</LinearLayout>